<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table>
  <thead>
    <tr>
      <th>Id</th>
      <th>Slug</th>
      <th>Slug full</th>
      <th>Title</th>
      <th>Text</th>
      <th>Text html</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.id %></td>
        <td><%= article.slug %></td>
        <td><%= article.slug_full %></td>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= article.text_html %></td>
        <td><%= link_to 'Show', article.slug_full %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

